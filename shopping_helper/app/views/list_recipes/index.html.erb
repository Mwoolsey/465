<p id="notice"><%= notice %></p>

<h1>Listing List Recipes</h1>

<table>
  <thead>
    <tr>
      <th>List</th>
      <th>Recipe</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @list_recipes.each do |list_recipe| %>
      <tr>
        <td><%= list_recipe.list %></td>
        <td><%= list_recipe.recipe %></td>
        <td><%= link_to 'Show', list_recipe %></td>
        <td><%= link_to 'Edit', edit_list_recipe_path(list_recipe) %></td>
        <td><%= link_to 'Destroy', list_recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

