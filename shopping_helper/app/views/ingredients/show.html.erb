<div id="user_nav">
  <% if user_signed_in? %>
    Signed in as <%= current_user.email %>. Not you?
    <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "link_to" %>
  <% else %>
    <%= link_to "Sign up", new_user_registration_path %> or
    <%= link_to "Sign in", new_user_session_path %>
  <% end %>
  <p class="alert"><%= alert %></p>
  <p class="notice"><%= notice %></p>
</div>

<p>
  <h2>Ingredient: <%= @ingredient.name %></h2>
  
</p>

<% @ingredient.recipes.each do |recipe| %>
  <ul>
    <li><%= link_to recipe.name, recipe_path(recipe.id) %></li>
  </ul>
<% end %>


<%= link_to 'Edit', edit_ingredient_path(@ingredient) %> |
<%= link_to 'Back', list_path(current_user.id) %>
